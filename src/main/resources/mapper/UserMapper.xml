<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.dao.UserDao">
    <resultMap id="BaseResultMap" type="com.example.entity.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="user_pass" property="userPass" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>
    
    <resultMap id="setResultMap" type="com.example.entity.User">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="user_pass" property="userPass" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <collection property="roles" ofType="com.example.entity.Role">
        	<id column="id" property="id"/>
        	<result column="role_name" property="roleName"/>
        	<result column="role_desc" property="roleDesc"/>
        </collection>
    </resultMap>
    
    <sql id="Base_Column_List" >
        id, user_name, user_pass, create_time
    </sql>
    <select id="queryById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from user
        where id = #{id}
    </select>
    
    <select id="queryByName" resultMap="setResultMap" parameterType="java.lang.String">
    	select 
    	u.*,rl.*
    	from user u 
    	left join user_role ur on ur.user_id =u.id 
    	left join role rl
    	on ur.role_id=rl.id 
    	where u.user_name = #{name}
    </select>
    
</mapper>